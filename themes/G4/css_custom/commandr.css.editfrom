{$THEME_WIZARD_COLOR,#222222,commandr_background,100% 222222}
{$THEME_WIZARD_COLOR,#dddddd,commandr_faded_text,100% DDDDDD}
{$THEME_WIZARD_COLOR,#ffffff,commandr_text,100% FFFFFF}
{$THEME_WIZARD_COLOR,#ffffff,commandr_border_color,100% 666666}
{$THEME_WIZARD_COLOR,#ffa500,commandr_notification_border,100% FFA500}
{$THEME_WIZARD_COLOR,#444400,commandr_notification_background,100% 444400}
{$THEME_WIZARD_COLOR,#ffffaa,commandr_notification_color,100% FFFFAA}
{$THEME_WIZARD_COLOR,#39669f,commandr_directory_listing,100% 39669F}
{$THEME_WIZARD_COLOR,#39ff9f,commandr_file_listing,100% 39FF9F}

#command_line { /* This wraps the Commandr module/window as a whole */
	/* Styled to look like generic command prompt */
	height: 600px;
	overflow-y: auto;
	background-color: {$GET,commandr_background};
	border: 2px solid {$GET,commandr_border_color};
	{$BETA_CSS_PROPERTY,box-shadow: 2px 2px {$GET,commandr_border_color};}
	padding: 0.5em;
	color: {$GET,commandr_text};
	font-family: monospace;
	direction: ltr;
}

#command_prompt {
	width: 100%;
}

#commandr_command {
	/* Styled to blend in with #command_line */
	padding: 2px;
	color: {$GET,commandr_text};
	background-color: {$GET,commandr_background};
	border: 0;
	border-bottom: 1px dashed {$GET,commandr_border_color};
	font-family: monospace;
	width: 400px;
}

.past_command {
	color: {$GET,commandr_faded_text};
	margin-left: 10px;
}

.text_output {
	white-space: pre !important;
	overflow-x: auto;
}

.command_output, .past_command td {
	color: {$GET,commandr_text};
}
.command_output, .past_command .results_table td {
	color: {$GET,slightly_seeded_text}; /* Undoes the above td rule as needed */
	background-color: {$GET,main_background};
}

.commandr_dir {
	color: {$GET,commandr_directory_listing};
	font-weight: bold;
}

.commandr_file {
	color: {$GET,commandr_file_listing};
}

.commandr_ls_associated_details {
	float: right;
	margin-left: 2em;
}

.commandr_notification {
	border: 1px solid {$GET,commandr_notification_border};
	background-color: {$GET,commandr_notification_background};
	color: {$GET,commandr_notification_color};
	margin: 1em;
	padding: 0.5em;
}

.whois_ip {
	font-weight: bolder;
}
